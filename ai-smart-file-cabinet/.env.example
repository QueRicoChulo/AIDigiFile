# Copy this file to .env and update the values before running ./deploy.sh
# DOMAIN should point to your VPS domain (e.g., example.com)
DOMAIN=example.com
# Email used by ACME to register certificates
LETSENCRYPT_EMAIL=admin@example.com
# If you already run an external reverse proxy (nginx) set this to true to skip Caddy
# and expose the frontend on EXTERNAL_PROXY_PORT so your proxy can forward requests.
USE_EXTERNAL_PROXY=false
# Host port where frontend will be reachable when USE_EXTERNAL_PROXY=true (e.g. 8081)
EXTERNAL_PROXY_PORT=8081
